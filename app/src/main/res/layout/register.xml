<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".register"
    android:background="#1a936f">

    <ImageView
        android:id="@+id/logo"
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:layout_centerHorizontal="true"
        android:maxWidth="300dp"
        android:maxHeight="300dp"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/logo"/>

    <TextView
        android:id="@+id/register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/logo"
        android:text="Register"
        android:layout_centerHorizontal="true"
        android:textColor="#FFFFFF"
        android:textSize="50dp"
        android:fontFamily="sans-serif-thin"
        android:layout_marginTop="10dp"
        />

    <EditText
        android:id="@+id/email"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:background="@drawable/text_box"
        android:drawableLeft="@drawable/ic_action_email"
        android:ems="10"
        android:hint="Email"
        android:textColorHint="#802E4053"
        android:textColor="#D9000000"
        android:inputType="textEmailAddress"
        android:textSize="16dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="30dp"
        android:layout_below="@id/register"
        android:layout_centerHorizontal="true"/>

    <EditText
        android:id="@+id/user"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:background="@drawable/text_box"
        android:drawableLeft="@drawable/ic_action_person"
        android:ems="10"
        android:hint="Username"
        android:textColorHint="#802E4053"
        android:textColor="#D9000000"
        android:inputType="textPersonName"
        android:textSize="16dp"
        android:layout_marginBottom="10dp"
        android:layout_below="@id/email"
        android:layout_centerHorizontal="true"/>

    <EditText
        android:id="@+id/passw"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:background="@drawable/text_box"
        android:drawableLeft="@drawable/ic_action_pass"
        android:ems="10"
        android:hint="Password"
        android:textColorHint="#802E4053"
        android:textColor="#D9000000"
        android:inputType="textPassword"
        android:textSize="16dp"
        android:layout_marginBottom="10dp"
        android:layout_below="@id/user"
        android:layout_centerHorizontal="true"/>

    <EditText
        android:id="@+id/repassw"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:background="@drawable/text_box"
        android:drawableLeft="@drawable/ic_action_pass"
        android:ems="10"
        android:hint="Re-Password"
        android:textColorHint="#802E4053"
        android:textColor="#D9000000"
        android:inputType="textPassword"
        android:textSize="16dp"
        android:layout_marginBottom="10dp"
        android:layout_below="@id/passw"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/gender"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/repassw"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="80dp"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="240dp"
        android:layout_marginRight="240dp"
        android:text="Jenis Kelamin" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/gender"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:id="@+id/radioButton">

        <RadioButton
            android:id="@+id/gender1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="50dp"
            android:textColor="#FFFFFF"
            android:text="Laki - laki" />

        <RadioButton
            android:id="@+id/gender2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="0dp"
            android:textColor="#FFFFFF"
            android:text="Perempuan" />

    </RadioGroup>

    <Button
        android:id="@+id/btn_register"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/radioButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/btn_shape_capsule"
        android:padding="8dp"
        android:text="Submit"
        android:textColor="@drawable/btn_txt_selector" />

</RelativeLayout>